<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="settingsMenuPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
            prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="jsettlers.main.javafx.settings.SettingsMenuController">
    <top>
        <Label text="%settings-title" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" vgap="10.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="%settings-name" GridPane.halignment="RIGHT"/>
                <Label text="%settings-volume" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
                <Slider fx:id="volumeSlider" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1"/>
                <Button fx:id="backButton" mnemonicParsing="false" text="%settings-back" GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
                <Button fx:id="okButton" mnemonicParsing="false" text="%settings-ok" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
    </center>

</BorderPane>
